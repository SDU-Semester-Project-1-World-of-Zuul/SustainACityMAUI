<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SustainACityMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SustainACityMAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">



    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:StartView}"
        Route="StartView" />
    
    <ShellContent
        Title="Game"
        ContentTemplate="{DataTemplate local:GameView}"
        Route="GameView" />

    <!-- Define minigame routes -->
    <ShellContent
        Title="SchoolQuiz"
        ContentTemplate="{DataTemplate local:SchoolQuizMinigameView}"
        Route="SchoolQuizMinigame" />

</Shell>