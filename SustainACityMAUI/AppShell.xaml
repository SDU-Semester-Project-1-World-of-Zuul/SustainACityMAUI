<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SustainACityMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SustainACityMAUI.Views"
    xmlns:minigames="clr-namespace:SustainACityMAUI.Minigames"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!-- Define minigame routes -->
    <ShellContent
        Title="SchoolQuiz"
        ContentTemplate="{DataTemplate minigames:SchoolQuizMinigameView}"
        Route="SchoolQuizMinigame" />

</Shell>